# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nh_management
DB_USER=nh_user
DB_PASSWORD=your_secure_password_here

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=False
SECRET_KEY=your_secret_key_here_change_in_production

# JWT Configuration (for API authentication)
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nh_management.log

# CORS (if using REST API)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# File Upload (if supporting document uploads)
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,jpg,png

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@highways.gov.in

# Backup Configuration
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Session Configuration
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=nh_

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
